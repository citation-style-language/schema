  ## All variables
  variables =
    variables.dates
    | variables.names
    | variables.numbers
    | variables.titles
    | variables.strings
  
  ## Standard variables
  variables.standard = variables.numbers | variables.strings
  
  ## Date variables
  variables.dates =
    "accessed"
    | "container"
    | "event-date"
    | "issued"
    | "original-date"
    | "submitted"
  
