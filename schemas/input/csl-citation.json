{
  "description": "JSON schema for CSL citation objects",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://resource.citationstyles.org/schema/latest/input/json/csl-citation.json",
  "type": "object",
  "properties": {
    "schema": {
      "type": "string",
      "enum": [
        "https://resource.citationstyles.org/schema/latest/input/json/csl-citation.json"
      ]
    },
    "version": {
      "type": "string",
      "pattern": "^1.1$"
    },
    "citationID": {
      "type": ["string", "number"]
    },
    "citationItems": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": ["string", "number"]
          },
          "itemData": {
            "$ref": "csl-data.json#/items"
          },
          "prefix": {
            "type": "string"
          },
          "suffix": {
            "type": "string"
          },
          "locators": {
            "title": "Locators",
            "description": "One-or-more specific locations within the cited document. The options should be self-explanatory mostly, as they should match the item in question. The array consists of locator objects.",
            "example": [{
                "locators": [{
                  "page": 21
                }]
              },
              {
                "locators": [{
                  "page": {
                    "begin": 23,
                    "end": 32
                  }
                }]
              },
              {
                "locators": [{
                  "page": [
                    1,
                    3,
                    {
                      "begin": 23,
                      "end": 32
                    }
                  ]
                }]
              },
              {
                "locators": [{
                    "page": 1
                  },
                  {
                    "line": 12
                  }
                ]
              },
              {
                "locators": {
                  "begin": [{
                      "page": 1
                    },
                    {
                      "line": 12
                    }
                  ],
                  "end": [{
                      "page": 2
                    },
                    {
                      "line": 3
                    }
                  ]
                }
              }
            ]
          },
          "type": "array",
          "items": {
            "anyOf": [{
                "appendix": {
                  "$ref": "#/definitions/locator-variable"
                }
              },
              {
                "article-locator": {
                  "title": "Article",
                  "description": "A section within an often legal document.",
                  "examples": ["U.S. Constitution, Article IV"],
                  "$ref": "#/definitions/locator-variable"
                }
              },
              {
                "book": {
                  "$ref": "#/definitions/locator-variable"
                }
              },
              {
                "canon": {
                  "$ref": "#/definitions/locator-variable"
                }
              },
              {
                "chapter": {
                  "$ref": "#/definitions/locator-variable"
                }
              },
              {
                "column": {
                  "$ref": "#/definitions/locator-variable"
                }
              },
              {
                "elocation": {
                  "title": "E-Location",
                  "description": "A location within an electronic document; for example an eBook.",
                  "$ref": "#/definitions/locator-variable"
                }
              },
              {
                "equation": {
                  "$ref": "#/definitions/locator-variable"
                }
              },
              {
                "figure": {
                  "$ref": "#/definitions/locator-variable"
                }
              },
              {
                "folio": {
                  "$ref": "#/definitions/locator-variable"
                }
              },
              {
                "issue": {
                  "$ref": "#/definitions/locator-variable"
                }
              },
              {
                "line": {
                  "$ref": "#/definitions/locator-variable"
                }
              },
              {
                "note": {
                  "$ref": "#/definitions/locator-variable"
                }
              },
              {
                "opus": {
                  "$ref": "#/definitions/locator-variable"
                }
              },
              {
                "page": {
                  "$ref": "#/definitions/locator-variable"
                }
              },
              {
                "paragraph": {
                  "$ref": "#/definitions/locator-variable"
                }
              },
              {
                "part": {
                  "$ref": "#/definitions/locator-variable"
                }
              },
              {
                "rule": {
                  "$ref": "#/definitions/locator-variable"
                }
              },
              {
                "section": {
                  "$ref": "#/definitions/locator-variable"
                }
              },
              {
                "sub-verbo": {
                  "$ref": "#/definitions/locator-variable"
                }
              },
              {
                "supplement": {
                  "$ref": "#/definitions/locator-variable"
                }
              },
              {
                "table": {
                  "$ref": "#/definitions/locator-variable"
                }
              },
              {
                "timestamp": {
                  "description": "An hour, minute, second timestamp for video or audio sources.",
                  "type": "string",
                  "pattern": "^[0-9]{2}:[0-9]{2}(:[0-9]{2})?$",
                  "examples": ["01:12:32"]
                }
              },
              {
                "title-locator": {
                  "title": "Title",
                  "description": "A section within an often legal document.",
                  "examples": ["Civil Rights Act of 1964, Title VII"],
                  "$ref": "#/definitions/locator-variable"
                }
              },
              {
                "verse": {
                  "$ref": "#/definitions/locator-variable"
                }
              },
              {
                "volume": {
                  "$ref": "#/definitions/locator-variable"
                }
              }
            ]
          },
          "minItems": 1,
          "additionalProperties": false
        }
      },
      "suppress-author": {
        "type": ["string", "number", "boolean"]
      },
      "author-only": {
        "type": ["string", "number", "boolean"]
      },
      "uris": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "required": ["id"],
      "additionalProperties": false
    }
  },
  "properties": {
    "type": "object",
    "properties": {
      "noteIndex": {
        "type": "number"
      }
    },
    "additionalProperties": false
  }
},
"required": ["schema", "citationID"],
"additionalProperties": false,
"definitions": {
  "locator-variable": {
    "description": "The value of a locator can be an array of numbers and/or strings OR a range object.",
    "type": "array",
    "items": {
      "anyOf": [{
          "type": ["number", "string"]
        },
        {
          "title": "Locator Range",
          "type": "object",
          "properties": {
            "begin": {
              "type": ["number", "string"]
            },
            "end": {
              "type": ["number", "string"]
            }
          }
        }
      ]
    }
  }
},
"additionalProperties": false
}
