{
  "description": "JSON schema for CSL citation objects",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://resource.citationstyles.org/schema/latest/input/json/csl-citation.json",
  "type": "object",
  "properties": {
    "schema": {
      "type": "string",
      "enum": [
        "https://resource.citationstyles.org/schema/latest/input/json/csl-citation.json"
      ]
    },
    "version": {
      "type": "string",
      "pattern": "^1.1$"
    },
    "citationID": {
      "type": ["string", "number"]
    },
    "citationItems": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": ["string", "number"]
          },
          "itemData": {
            "$ref": "csl-data.json#/items"
          },
          "prefix": {
            "type": "string"
          },
          "suffix": {
            "type": "string"
          },
          "locators": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/locators"
            }
          },
          "suppress-author": {
            "type": ["string", "number", "boolean"]
          },
          "author-only": {
            "type": ["string", "number", "boolean"]
          },
          "uris": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": ["id"],
        "additionalProperties": false
      }
    },
    "properties": {
      "type": "object",
      "properties": {
        "noteIndex": {
          "type": "number"
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["schema", "citationID"],
  "additionalProperties": false,
  "definitions": {
    "locator-variable": {
      "description": "A locator is a list, that can be a string, or a (preferred) array. The array can consist of numbers, strings, or locator objects; a range can be represented by a two-item sub-array.",
      "anyOf": [
        {
          "description": "When using the string ...",
          "type": "string"
        },
        {
          "description": "Strings represent a literal number, while numbers (integer or floating point) should otherwise be used. Ranges are represented by a two-item inner array.",
          "examples": [
            {
              "page": [2, 3, [5, 12]]
            },
            {
              "page": ["I-13"]
            },
            {
              "page": [["I-13", "I-18"]]
            }
          ],
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "number"
            },
            {
              "type": "array",
              "items": {
                "$ref": "#/definitions/locators"
              }
            }
          ]
        }
      ]
    },
    "locators": {
      "appendix": {
        "$ref": "#/definitions/locator-variable"
      },
      "article": {
        "$ref": "#/definitions/locator-variable"
      },
      "book": {
        "$ref": "#/definitions/locator-variable"
      },
      "canon": {
        "$ref": "#/definitions/locator-variable"
      },
      "chapter": {
        "$ref": "#/definitions/locator-variable"
      },
      "column": {
        "$ref": "#/definitions/locator-variable"
      },
      "elocation": {
        "$ref": "#/definitions/locator-variable"
      },
      "equation": {
        "$ref": "#/definitions/locator-variable"
      },
      "figure": {
        "$ref": "#/definitions/locator-variable"
      },
      "folio": {
        "$ref": "#/definitions/locator-variable"
      },
      "issue": {
        "$ref": "#/definitions/locator-variable"
      },
      "line": {
        "$ref": "#/definitions/locator-variable"
      },
      "note": {
        "$ref": "#/definitions/locator-variable"
      },
      "opus": {
        "$ref": "#/definitions/locator-variable"
      },
      "page": {
        "$ref": "#/definitions/locator-variable"
      },
      "paragraph": {
        "$ref": "#/definitions/locator-variable"
      },
      "part": {
        "$ref": "#/definitions/locator-variable"
      },
      "rule": {
        "$ref": "#/definitions/locator-variable"
      },
      "section": {
        "$ref": "#/definitions/locator-variable"
      },
      "sub-verbo": {
        "$ref": "#/definitions/locator-variable"
      },
      "supplement": {
        "$ref": "#/definitions/locator-variable"
      },
      "table": {
        "$ref": "#/definitions/locator-variable"
      },
      "timestamp": {
        "description": "An hour, minute, second timestamp for video or audio sources.",
        "type": "string",
        "pattern": "^[0-9]{2}:[0-9]{2}(:[0-9]{2})?$",
        "examples": ["01:12:32"]
      },
      "title": {
        "$ref": "#/definitions/locator-variable"
      },
      "verse": {
        "$ref": "#/definitions/locator-variable"
      },
      "volume": {
        "$ref": "#/definitions/locator-variable"
      }
    }
  }
}
